{
  "manifest_version": 3,
  "name": "Shopify Detector",
  "version": "1.0",
  "description": "Detects if a website uses Shopify",
  "action": {
    "default_title": "Shopify Detector",
    "default_icon": {
      "16": "not_shopify.png",
      "32": "not_shopify.png",
      "48": "not_shopify.png",
      "128": "not_shopify.png"
    }
  },
  "permissions": [
    "scripting",
    "activeTab",
    "action"
  ],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
